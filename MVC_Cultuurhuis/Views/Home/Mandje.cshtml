@{ 
    ViewBag.Title = "Mandje";
    var ajaxOpts = new AjaxOptions
    {
        UpdateTargetId = "update",
        Url = Url.Action("MandjeItemsLijst")
    };
}
<div class="jumbotron">
    <h1>Het Cultuurhuis <img src="~/Images/mandje.png" alt="winkelmandje" /></h1> 
    <p> 
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">Tickets kiezen &raquo;</a> 
        <a href="@Url.Action("Bevestiging", "Home")" class="btn btn-primary btn-lg">Kassa &raquo;</a> 
    </p> 
</div>
<p class="lead alert alert-info">Inhoud van uw winkelmandje:</p>
@using (Ajax.BeginForm("Mandje", ajaxOpts))
{
    <div id="update">
        @Html.Action("MandjeItemsLijst")
    </div>
    <div>
        <input type="submit" value="Selectie verwijderen" class="btn" />
    </div>
}
